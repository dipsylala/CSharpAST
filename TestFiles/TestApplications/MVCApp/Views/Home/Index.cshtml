@model HomeViewModel
@{
    ViewData["Title"] = "Welcome to Library System";
}

<div class="hero-section bg-primary text-white py-5 mb-4">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold">Welcome to Our Digital Library</h1>
                <p class="lead">Discover thousands of books across various genres. Find your next great read today!</p>
                <div class="d-flex gap-3">
                    <a asp-controller="Books" asp-action="Index" class="btn btn-light btn-lg">Browse Books</a>
                    <a href="#featured" class="btn btn-outline-light btn-lg">Featured Books</a>
                </div>
            </div>
            <div class="col-lg-4 text-end">
                <div class="stats-card bg-white text-dark p-4 rounded shadow">
                    <h3 class="h4 mb-2">Library Stats</h3>
                    <div class="row text-center">
                        <div class="col-6">
                            <div class="fw-bold fs-2 text-primary">@Model.TotalBooksCount</div>
                            <small>Total Books</small>
                        </div>
                        <div class="col-6">
                            <div class="fw-bold fs-2 text-success">@Model.PopularGenres.Count()</div>
                            <small>Genres</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <!-- Search Section -->
    <section class="search-section mb-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title text-center mb-4">Find Your Next Book</h5>
                        <form asp-controller="Books" asp-action="Index" method="get" class="row g-3">
                            <div class="col-md-8">
                                <input type="text" name="searchTerm" class="form-control form-control-lg" 
                                       placeholder="Search by title, author, or description..." />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary btn-lg w-100">
                                    <i class="fas fa-search me-2"></i>Search
                                </button>
                            </div>
                        </form>
                        
                        <div class="mt-3">
                            <small class="text-muted">Popular genres: </small>
                            @foreach (var genre in Model.PopularGenres.Take(5))
                            {
                                <a asp-controller="Books" asp-action="Index" asp-route-genre="@genre" 
                                   class="badge bg-secondary text-decoration-none me-2">@genre</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Featured Books Section -->
    <section id="featured" class="featured-books mb-5">
        <h2 class="section-title mb-4">
            <span class="text-primary">Featured</span> Books
            <small class="text-muted">- Handpicked selections</small>
        </h2>
        
        <div class="row">
            @foreach (var book in Model.FeaturedBooks)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 shadow-sm book-card">
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                            <img src="@book.CoverImageUrl" alt="@book.Title" class="img-fluid" style="max-height: 180px;" />
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@book.Title</h5>
                            <p class="card-text text-muted mb-2">by @book.Author</p>
                            <p class="card-text flex-grow-1">@book.Description.Substring(0, Math.Min(100, book.Description.Length))...</p>
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="badge bg-info">@book.Genre</span>
                                    <strong class="text-primary">@book.FormattedPrice</strong>
                                </div>
                                <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id" 
                                   class="btn btn-outline-primary w-100 mt-2">View Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        
        <div class="text-center">
            <a asp-controller="Books" asp-action="Index" class="btn btn-primary btn-lg">
                View All Books <i class="fas fa-arrow-right ms-2"></i>
            </a>
        </div>
    </section>

    <!-- New Releases Section -->
    @if (Model.NewReleases.Any())
    {
        <section class="new-releases mb-5">
            <h2 class="section-title mb-4">
                <span class="text-success">New</span> Releases
                <small class="text-muted">- Latest additions</small>
            </h2>
            
            <div class="row">
                @foreach (var book in Model.NewReleases)
                {
                    <div class="col-lg-3 col-md-6 mb-4">
                        <div class="card h-100 shadow-sm new-release-card">
                            <div class="position-relative">
                                <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 150px;">
                                    <img src="@book.CoverImageUrl" alt="@book.Title" class="img-fluid" style="max-height: 130px;" />
                                </div>
                                <span class="badge bg-success position-absolute top-0 end-0 m-2">New</span>
                            </div>
                            <div class="card-body">
                                <h6 class="card-title">@book.Title</h6>
                                <p class="card-text text-muted small">@book.Author</p>
                                <p class="card-text small">Published: @book.PublishedYear</p>
                                <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id" 
                                   class="btn btn-sm btn-outline-success w-100">Learn More</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>
    }
</div>

@section Scripts {
    <script>
        // Add some interactive features
        $(document).ready(function() {
            // Animate cards on hover
            $('.book-card, .new-release-card').hover(
                function() { $(this).addClass('shadow-lg').css('transform', 'translateY(-5px)'); },
                function() { $(this).removeClass('shadow-lg').css('transform', 'translateY(0)'); }
            );
            
            // Smooth scrolling for anchor links
            $('a[href^="#"]').on('click', function(event) {
                var target = $(this.getAttribute('href'));
                if( target.length ) {
                    event.preventDefault();
                    $('html, body').stop().animate({
                        scrollTop: target.offset().top - 100
                    }, 1000);
                }
            });
        });
    </script>
}

<style>
    .hero-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    
    .book-card, .new-release-card {
        transition: all 0.3s ease;
        border: none;
    }
    
    .section-title {
        border-bottom: 3px solid #f8f9fa;
        padding-bottom: 10px;
    }
    
    .stats-card {
        border-left: 4px solid #007bff;
    }
    
    .search-section .card {
        border-top: 4px solid #007bff;
    }
</style>
